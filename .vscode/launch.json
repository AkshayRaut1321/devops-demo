{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET 8 Launch DevOpsDemo",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build DevOpsDemo",
            "program": "${workspaceFolder}/DevOpsDemo/bin/Debug/net8.0/DevOpsDemo.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DevOpsDemo",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:8004"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/DevOpsDemo/Views"
            }
        },
        {
            "name": ".NET 8 Launch MongoPlayground",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build MongoPlayground",
            "program": "${workspaceFolder}/DevOpsDemo.MongoPlayground/bin/Debug/net8.0/DevOpsDemo.MongoPlayground.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DevOpsDemo.MongoPlayground",
            "stopAtEntry": false,
            "console": "integratedTerminal"
        }
    ]
}