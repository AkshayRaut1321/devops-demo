{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "MongoDbIndexer": {
    "ConnectionString": "mongodb://mongo:27017",
    "Database": "productdb",
    "Collection": "products"
  },
  "ElasticSearchIndexer": {
    "Url": "http://elasticsearch:9200",
    "IndexName": "products"
  },
  "WorkerIndexer": {
    "RetryDelaySeconds": 5,
    "EnableChangeStream": true,
    "EnableFullResyncOnStart": false,
    "BatchSize": 100,
    "CheckpointCollection": "search_sync_checkpoints",
    "DeadLetterCollection": "search_sync_deadletters",
    "FullReindexOnStartup": true,
    "FullReindexIntervalMinutes": 1440,
    "ChangeStreamEnabled": true,
    "ChangeStreamRetrySeconds": 10
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  }
}